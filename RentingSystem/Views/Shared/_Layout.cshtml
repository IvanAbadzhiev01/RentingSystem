@using static RentingSystem.Infrastructure.Constants.ToastrMessageConstants
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rent My</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentingSystem.styles.css" asp-append-version="true" />
</head>
<body class="bg-info">
    <header class="">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm text-white bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Rent My</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @await Component.InvokeAsync(nameof(MainMenuComponent))
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="flex-fill pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top  bg-primary footer text-muted text-white mt-auto">
        <div class="container text-white">
            &copy; @DateTime.Now.Year - RentingSystem
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if (TempData[Success] != null)
    {
        <script defer>
            message.showSuccess('@TempData[Success]')
        </script>
    }
    @if (TempData[Error] != null)
    {
        <script defer>
            message.showError('@TempData[Error]')
        </script>
    }
</body>
</html>
