@model CarServiceModel
@inject IDealerService dealerService
@inject ICarService carService
<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="House Image">
        <div class="card-body text-center">
            <h4>@Model.Make @Model.Model</h4>
            <h6>Year: <b>@Model.Year</b></h6>
            <h6>
                Price Per Day:
                <b>@String.Format("{0:f2}", Model.PricePerDay) BGN</b>
            </h6>
            <h6>(@(Model.IsRented ? "Rented" : "Not Rented"))</h6>
            <br />
            <a asp-controller="Car" asp-action="Details" asp-route-id="@Model.Id"
            asp-route-information="@Model.GetInformation()"
               class="btn btn-success">Details</a>
            @if (this.User.Identity.IsAuthenticated)
            {
                if (await carService.HasDealerWithIdAsync(Model.Id, User.Id()) 
                || User.IsAdmin())
                {
                    <a asp-controller="Car" asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-warning">Edit</a>
                    <a asp-controller="Car" asp-action="Delete" asp-route-id="@Model.Id"
                       class="btn btn-danger">Delete</a>
                }
                <p></p>
                @if (!Model.IsRented && (await dealerService.ExistsByIdAsync(User.Id())) == false             
                || User.IsAdmin())
                {
                    <form class="input-group-sm" asp-controller="Car"
                          asp-action="Rent" asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-primary bg-light" type="submit" value="Rent" />
                    </form>
                }
                else if(await carService.IsRentedByUserWithIdAsync(Model.Id, User.Id()))
                {
                    <form asp-controller="Car" asp-action="Return"
                          asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-primary bg-light" type="submit" value="Return" />
                    </form>
                }
            }
        </div>
    </div>
</div>
