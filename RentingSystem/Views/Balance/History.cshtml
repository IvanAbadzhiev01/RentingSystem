@model IEnumerable<Transaction>
@{
    ViewData["Title"] = "Balance";
}

<h1>Your Transaction History</h1>

<a asp-area="" asp-controller="Balance" asp-action="Manage" class="btn text-black btn-warning">Back</a>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount (BGN)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Date.ToString("g")</td>
                <td>@transaction.Description</td>
                <td>@transaction.Amount.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>
