@model BalanceViewModel
@{
    ViewData["Title"] = "Balance";
}
<div id="balance-manager" class="balance-container text-white">
    <h1 class="text-white" >Manage Your Balance</h1>
    <p class="text-white" >Your current balance: <strong>@Model.Balance</strong> BGN</p>

    <div class="balance-tabs">
        <button class="balance-tab-btn active text-white" data-tab="topup">Top Up</button>
        <button class="balance-tab-btn text-white" data-tab="withdraw">Withdraw</button>
    </div>

    <div class="balance-tab-content">
        <div id="topup" class="balance-tab-panel active">
            <form asp-action="TopUp" method="post">
                <label class="text-white" for="topup-amount">Enter Amount:</label>
                <input type="number" id="topup-amount" name="amount" step="0.01" min="0.01" required />
                <button type="submit" class="btn btn-success">Top Up</button>
            </form>
        </div>

        <div id="withdraw" class="balance-tab-panel">
            <form asp-action="Withdraw" method="post">
                <label class="text-white" for="withdraw-amount">Enter Amount:</label>
                <input type="number" id="withdraw-amount" name="amount" step="0.01" min="0.01" required />
                <button type="submit" class="btn btn-danger">Withdraw</button>
            </form>
        </div>
    </div>

        <a asp-area="" asp-controller="Balance" asp-action="History" class="btn-large">Transaction History</a>
</div>

@section Scripts {
    <script src="~/js/balanceManager.js"></script>
}


