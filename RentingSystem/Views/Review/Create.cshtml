@model ReviewViewModel

@{
    ViewData["Title"] = "Review";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Leave a Review</h2>

    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="UserFullName" value="@User.FindFirstValue(RentingSystem.Infrastructure.Constants.CustomClaims.UserFullName)" />
        <input type="hidden" asp-for="CarId" />

        <div class="form-group mb-4">
            <label asp-for="Rating" class="form-label">Rating (1-5)</label>
            <input asp-for="Rating" class="form-control form-control-lg" type="number" min="1" max="5" required />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Comment" class="form-label">Your Comment</label>
            <textarea asp-for="Comment" class="form-control form-control-lg" rows="4" placeholder="Share your experience..." required></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg px-5">Submit Review</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
